<div class="page-header">
  <%= link_to new_daily_total_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Daily total
  <% end %>
  <h1>Listing daily_totals</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Date</th>
            <th>New card regs</th>
            <th>Daily rx users</th>
            <th>Device registrations</th>
            <th>Device activity</th>
            <th>Peoplescanning</th>
            <th>Items scanned</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @daily_totals) do |daily_total| %>
            <td><%= daily_total.date %></td>
            <td><%= daily_total.new_card_regs %></td>
            <td><%= daily_total.daily_rx_users %></td>
            <td><%= daily_total.device_registrations %></td>
            <td><%= daily_total.device_activity %></td>
            <td><%= daily_total.peoplescanning %></td>
            <td><%= daily_total.items_scanned %></td>
            <td><%= link_to 'Show', daily_total %></td>
        <td><%= link_to 'Edit', edit_daily_total_path(daily_total) %></td>
        <td><%= link_to 'Destroy', daily_total, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
